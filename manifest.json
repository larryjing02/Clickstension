{
    "manifest_version": 3,
    "name": "Clickstension",
    "description": "Keeps track of time spent on different sites",
    "version": "1.0.0",
    "icons": { "128": "clickIcon128.png" },
    "permissions": ["storage", "tabs"],

    "background": {
      "service_worker": "background.js"
    },

    "action": {
      "default_title": "Click Me",
      "default_icon": "clickIcon.png",
      "default_popup": "popup.html"
    },

    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens popup.html"
      }
    }
  }